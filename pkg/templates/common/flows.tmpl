{{ define "Flows" }}
  {{ range .Flows }}
    <Flow name="{{ .Name }}">
      {{ if .Description -}}
      <Description>{{ .Description }}</Description>
      {{- else -}}
      <Description />
      {{- end }}
      {{ if .Condition -}}
      <Condition>{{ .Condition }}</Condition>
      {{- else -}}
      <Condition />
      {{- end }}
      {{ if and (.RequestSteps) ( gt (len .RequestSteps) 0) -}}
      <Request>
      {{- range .RequestSteps }}
        <Step>
          <Name>{{ .Name }}</Name>
          <Condition>{{ .Condition }}</Condition>
        </Step>
      {{- end }}
      </Request>
      {{- else -}}
      <Request />
      {{- end }}
      {{ if and (.ResponseSteps) ( gt (len .ResponseSteps) 0) -}}
      <Response>
      {{- range .ResponseSteps }}
        <Step>
          <Name>{{ .Name }}</Name>
          <Condition>{{ .Condition }}</Condition>
        </Step>
      {{- end }}
      </Response>
      {{- else -}}
      <Response />
      {{- end }}
    </Flow>
  {{ end }}
{{ end }}
