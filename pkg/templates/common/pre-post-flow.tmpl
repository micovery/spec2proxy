{{ define "PrePostFlow" }}
    {{- if .Description }}
    <Description>{{ .Description }}</Description>
    {{- else -}}
    <Description />
    {{- end }}
    {{ if and (.Request) ( gt (len .Request) 0) -}}
    <Request>
    {{- range .Request }}
      <Step>
        <Name>{{ .Step.Name }}</Name>
        <Condition>{{ .Step.Condition }}</Condition>
      </Step>
    {{- end }}
    </Request>
    {{- else -}}
    <Request />
    {{- end }}
    {{ if and (.Response) ( gt (len .Response) 0) -}}
    <Response>
    {{- range .Response }}
      <Step>
        <Name>{{ .Step.Name }}</Name>
        <Condition>{{ .Step.Condition }}</Condition>
      </Step>
    {{- end }}
    </Response>
    {{- else -}}
    <Response />
    {{- end }}
{{- end -}}